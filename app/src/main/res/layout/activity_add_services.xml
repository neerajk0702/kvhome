<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddServicesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimValue_10"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp">

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Devices Id"
                android:singleLine="true"

                android:textColor="@color/primary_text"
                android:textSize="@dimen/dimTextSize_14" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp">

            <EditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Of Socket"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/dimTextSize_14" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimValue_30"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signup"
                android:layout_width="@dimen/_140dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@drawable/button_login"
                android:elevation="@dimen/dimValue_10"
                android:gravity="center"
                android:paddingTop="@dimen/dimValue_16"
                android:paddingBottom="@dimen/dimValue_16"
                android:text="Add Services"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTextSize_14" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>